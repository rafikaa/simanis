<!-- ### Screen Content ### -->
<main class='main-content bgc-grey-100'>
  <div id='mainContent'>
    <div class="row gap-20 masonry pos-r">
      <div class="masonry-sizer col-md-8"></div>
      <div class="masonry-item col-md-8">
        <div class="bgc-white bd bdrs-3 p-20">
          <h4 class="c-grey-900 mB-30">Submit Laporan</h4>
          <form>
            <div class="form-group row">
              <label for="bulanTahunLaporan" class="col-sm-4 col-form-label">Bulan dan Tahun</label>
              <div class="col-sm-8">
                <div id="datepickerBulanTahun" class="input-group date" data-date-format="mm-yyyy">
                  <input id="bulanTahunLaporan" class="form-control" type="text" readonly />
                  <div class="input-group-append">
                    <span class="input-group-text input-group-addon"><i class="ti-calendar"></i></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <label for="upk" class="col-sm-4 col-form-label">UPK</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" id="upk" placeholder="UPK Belawan" disabled>
              </div>
            </div>
            <div class="form-group row">
              <label for="ulpl" class="col-sm-4 col-form-label">ULPL</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" id="ulpl" placeholder="">
              </div>
            </div>
            <div class="form-group row">
              <label for="berkasLaporan" class="col-sm-4 col-form-label">Berkas Laporan</label>
              <div class="col-sm-8">
                <input type="file" class="form-control-file" id="berkasLaporan" name="berkasLaporan">
              </div>
            </div>
            <div class="form-group row mT-30 text-right">
              <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </div>
          </form>
        </div>
        <div class="bgc-white bd bdrs-3 p-20 mT-20">
          <h4 class="c-grey-900 mB-30">Histori Laporan</h4>
          <form action="">
            <div class="form-group row">
              <label for="upk" class="col-sm-1 col-form-label">UPK</label>
              <div class="col-sm-3">
                <select id="upk" class="form-control">
                  <option selected="selected">Pilih UPK...</option>
                  <option value="upkBelawan">UPK Belawan</option>
                  <option value="upkPangkalanSusu">UPK Pangkalan Susu</option>
                  <option value="upkNaganRaya">UPK Nagan Raya</option>
                  <option value="upkLabuhanAngin">UPK Labuhan Angin</option>
                  <option value="updkPekanbaru">UPK Pekan Baru</option>
                  <option value="updkPandan">UPK Pandan</option>
                </select>
              </div>
              <div class="form-group col-sm-3">
                <button class="btn btn-primary">Tampilkan</button>
              </div>
            </div>
          </form>
          <table id="table-laporan" class="table table-bordered" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Unit Pelaksana Pembangkit (UPK)</th>
                <th>Unit Layanan Pusat Listrik (ULPL)</th>
                <th>Periode Submit</th>
                <th>Berkas Laporan</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>UPK Belawan</td>
                <td>ULPL 1</td>
                <td>mm-yyyy</td>
                <td>
                  <a href="files/sample.pdf">Download</a>
                </td>
              </tr>
              <tr>
                <td>UPK Belawan</td>
                <td>ULPL 2</td>
                <td>mm-yyyy</td>
                <td>
                  <a href="files/sample.pdf">Download</a>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
<script>
  $(document).ready(function () {
    $('#table-laporan').DataTable({
      searching: false
    });
    $("#datepickerBulanTahun").datepicker({
      autoclose: true,
      todayHighlight: true,
      format: "mm-yyyy",
      startView: "months",
      minViewMode: "months"
    }).datepicker('update', new Date());
  });
</script>