<!-- ### Screen Content ### -->
<main class='main-content bgc-grey-100'>
  <div id='mainContent'>
    <div class="row gap-20">
      <div class="col-md-8">
        <div class="bgc-white bd bdrs-3 p-20">
          <h4 class="c-grey-900 mB-30">Input Data Pemakaian Sendiri</h4>
          <form method="POST">
            <div class="form-group row">
              <label for="bulanTahun" class="col-sm-4 col-form-label">Bulan dan Tahun</label>
              <div class="col-sm-8">
                <div id="datepickerBulanTahun" class="input-group date" data-date-format="mm-yyyy">
                  <input name="bulanTahun" id="bulanTahun" class="form-control" type="text" required readonly />
                  <div class="input-group-append">
                    <span class="input-group-text input-group-addon"><i class="ti-calendar"></i></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <label for="upk" class="col-sm-4 col-form-label">Unit Pelaksana Pembangkit (UPK)</label>
              <div class="col-sm-8">
                <select name="upk" class="form-control" id="upk" required>
                  <option disabled hidden selected>Pilih UPK...</option>
                  {{#each units}}
                  <option value="{{this.username}}">{{this.name}}</option>
                  {{/each}}
                </select>
              </div>
            </div>
            <div class="form-group row">
              <label for="ulpl" class="col-sm-4 col-form-label">Unit Layanan Pusat Listrik (ULPL)</label>
              <div class="col-sm-8">
                <input name="ulpl" type="text" class="form-control" id="ulpl" placeholder="" required>
              </div>
            </div>
            <div class="form-group row">
              <label for="jenisPembangkit" class="col-sm-4 col-form-label">Jenis Pembangkit</label>
              <div class="col-sm-8">
                <select name="jenisPembangkit" class="form-control" id="jenisPembangkit" required>
                  <option selected="selected">Pilih jenis pembangkit...</option>
                  <option value="pltu">Pembangkit Listrik Tenaga Uap (PLTU)</option>
                  <option value="pltg">Pembangkit Listrik Tenaga Gas (PLTG)</option>
                  <option value="pltmg">Pembangkit Listrik Tenaga Mesin Gas (PLTMG)</option>
                  <option value="pltd">Pembangkit Listrik Tenaga Diesel (PLTD)</option>
                </select>
              </div>
            </div>
            <div class="form-group row">
              <label for="produksiBruto" class="col-sm-4 col-form-label">Produksi Bruto (kWh)</label>
              <div class="col-sm-8">
                <input name="produksiBruto" type="number" step="0.0001" class="form-control" id="produksiBruto" placeholder="kWh" required>
              </div>
            </div>
            <div class="form-group row">
              <label for="pemakaianSendiri" class="col-sm-4 col-form-label">Pemakaian Sendiri (kWh)</label>
              <div class="col-sm-8">
                <input name="pemakaianSendiri" type="number" step="0.0001" class="form-control" id="pemakaianSendiri" placeholder="kWh" required>
              </div>
            </div>
            <div class="form-group row mT-30 text-right">
              <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
<script>
  $(function () {
    $("#datepickerBulanTahun").datepicker({
      autoclose: true,
      todayHighlight: true,
      format: "mm-yyyy",
      startView: "months",
      minViewMode: "months"
    }).datepicker('update', new Date());
  });
</script>